<% include ./partials/header %>
    <div class="main" role="main">
        <% for(var i = 0; i < data.length; i++ ){ %>
            <div class="page-head">
                <div class="container">
                    <a class="page-title" href="/">
                <i class="fa fa-long-arrow-left"></i>
                back to jobs
            </a>
                </div>
                <!--End container-->
            </div>
            <!--End Page-head-->
            <div class="page-content">
                <div class="container">
                    <div class="job-post-wrap">
                        <div class="gray-box job-post-item">
                            <div class="job-post-head">
                                <div class="row">
                                    <div class="col-md-9">
                                        <h3 class="job-post-title">
                                            <%= data[i].job_title %>
                                        </h3>
                                        <!--End job-post-title-->
                                        <h4 class="job-post-subtitle">
                                            <%= data[i].category %>
                                        </h4>
                                        <!--End job-post-subtitle-->
                                        <h4 class="job-post-subtitle">
                                            <%= data[i].about_company %>
                                        </h4>
                                        <!--End job-post-subtitle-->
                                        <div class="job-post-links">
                                            <%- data[i].anchor_url %>
                                        </div>
                                        <!--End job-post-links-->

                                        <div class="job-post-visa">
                                            <span>Visa Sponsor:</span>
                                            <% if( data[i].visa_psponcer){ %> Yes
                                                <% }else{ %> No
                                                    <% } %>
                                        </div>
                                        <!--End job-post-visa-->
                                    </div>
                                    <!--End col-md-9-->
                                    <% if(data[i].user_image){ %>
                                        <div class="col-md-3">
                                            <div class="job-post-author">
                                                <img src="<%= img_path %><%= data[i].user_image %>">
                                            </div>
                                            <!--End job-post-author-->
                                            <!-- action="/api/send_resume" -->
                                        </div>
                                        <% } %>
                                            <!--End col-md-3-->
                                </div>
                                <!--End row-->
                            </div>
                            <!--End job-post-head-->
                            <div class="job-post-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <% if( data[i].min_range && data[i].max_range){ %>
                                            <h3 class="subtitle">Compensation Range</h3>
                                            <p>The budgeted compensation range for this role is
                                                <%= data[i].currency %>
                                                    <%= data[i].min_range %> to
                                                        <%= data[i].currency %>
                                                            <%= data[i].max_range %>
                                                                <%= data[i].compensation %>.
                                            </p>
                                            <% } %>
                                                <% if(data[i].key_skills){ %>
                                                    <h3 class="subtitle">Key Skills</h3>
                                                    <ul class="tags">
                                                        <% for(var j = 0; j < data[i].key_skills.length; j++ ){ %>
                                                            <li>
                                                                <%= data[i].key_skills[j] %>
                                                            </li>
                                                            <% } %>
                                                    </ul>
                                                    <% } %>
                                                        <!--End tags-->

                                                        <% if( data[i].job_des){ %>
                                                            <h3 class="subtitle">Job Description</h3>
                                                            <div class="padd-l-15 job-des">
                                                                <%- data[i].job_des %>
                                                            </div>
                                                            <% } %>
                                    </div>
                                    <!--End col-md-8-->
                                    <div class="col-xs-12 col-md-4">
                                        <div class="right-col subscribe">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="372" height="60" viewBox="0 0 372 60">

                                                <g id="f1" transform="matrix(0.16330871,-0.13423313,0.13423313,0.16330871,162.8917,26.041683)">
                                                    <path class="s0" d="M13.6 0H68l40.8 40.7v81.4c0 7.5-6.1 13.6-13.6 13.6H13.6C6 135.8 0 129.6 0 122.2V13.6C0 6 6 0 13.6 0"
                                                    />
                                                    <path class="s1" d="M75.5 108.6V95H14.3v13.6h61.2m20.4-27.1V67.9H14.3v13.6h81.6z" />
                                                    <path class="s2" d="M108.7 55.7v-15H68l40.7 15" />
                                                    <path class="s3" d="M68 40.7h40.7L68 0v40.7z" />
                                                </g>
                                                <g id="f2" transform="matrix(0.07205931,-0.08210678,0.08210678,0.07205931,313.25512,27.024521)">
                                                    <path class="s0" d="M13.6 0H68l40.8 40.7v81.4c0 7.5-6.1 13.6-13.6 13.6H13.6C6 135.8 0 129.6 0 122.2V13.6C0 6 6 0 13.6 0"
                                                    />
                                                    <path class="s1" d="M75.5 108.6V95H14.3v13.6h61.2m20.4-27.1V67.9H14.3v13.6h81.6z" />
                                                    <path class="s2" d="M108.7 55.7v-15H68l40.7 15" />
                                                    <path class="s3" d="M68 40.7h40.7L68 0v40.7z" />
                                                </g>
                                                <g id="f3" transform="matrix(0.14081073,0.07158398,-0.07158398,0.14081073,256.75111,15.800887)">
                                                    <path class="s0" d="M13.6 0H68l40.8 40.7v81.4c0 7.5-6.1 13.6-13.6 13.6H13.6C6 135.8 0 129.6 0 122.2V13.6C0 6 6 0 13.6 0"
                                                    />
                                                    <path class="s1" d="M75.5 108.6V95H14.3v13.6h61.2m20.4-27.1V67.9H14.3v13.6h81.6z" />
                                                    <path class="s2" d="M108.7 55.7v-15H68l40.7 15" />
                                                    <path class="s3" d="M68 40.7h40.7L68 0v40.7z" />
                                                </g>
                                                <g id="env">
                                                    <g transform="matrix(0.61288962,0,0,0.61288962,63.121532,11.301091)">
                                                        <path class="s0" d="M63 0H7C3.1 0 0 3.1 0 7v42c0 3.8 3.2 7 7 7h56c3.8 0 7-3.2 7-7V7c0-3.9-3.2-7-7-7z" />
                                                        <path class="s2" d="M0 9.5h70L35 38 0 9.5z" />
                                                        <path class="s3" d="M7 0h56c3.8 0 7 3.2 7 7v2.5L35 31.3 0 9.5V7c0-3.8 3.2-7 7-7z" />
                                                    </g>
                                                </g>
                                            </svg>
                                            <div class="padd-15">
                                                <h3>Want more jobs like this?</h3>
                                                <form <%=action %> class="subscribe-email" name="sub_form">
                                                    <div class="form-group show-hide">
                                                        <label>Email</label>
                                                        <input type="email" class="input-control" id="sub_email" required name="fields[email]" onkeyup="check_valid()" onblur="check_valid()"
                                                        />
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="button" class="custom-btn" value="Subscribe" id="subscribe" onclick="show_submit()" />
                                                        <input type="submit" class="custom-btn" value="Submit" disabled id="submit" />
                                                    </div>
                                                </form>
                                                <div class="form-group">
                                                    <label>Current UTC: </label>
                                                    <label class="unbold" id="time">
                                                       
                                                    </label>
                                                </div>
                                                <div class="form-group">
                                                    <label>Time Zone: </label>
                                                    <label class="unbold">                                                        
                                                        <%= data[i].timezone %>
                                                    </label>
                                                </div>
                                                <% if(data[i].job_type != null){ %>
                                                    <div class="form-group">
                                                        <label>Job Type: </label>
                                                        <label class="unbold">
                                                            <%= data[i].job_type %>
                                                        </label>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="form-group">
                                                            <label>Job Type: </label>
                                                            <label class="unbold">
                                                                Unspecified
                                                            </label>
                                                        </div>
                                                        <% } %>
                                                            <div class="form-group">
                                                                <label>Date Posted: </label>
                                                                <label class="unbold">
                                                                    <%= data[i].date %>
                                                                </label>
                                                            </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End row-->
                        <div class="gray-box">
                            <div class="job-post-contact ">
                                <% if(data[i].email_to){ %>
                                    <h3 class="subtitle">APPLY FOR THIS POSITION</h3>
                                    <button class="custom-btn head-btn send-cv" class="custom-links" onclick="modal()">Apply Now</button>
                                    <% }else{ %>
                                        <h3 class="subtitle">APPLY FOR THIS POSITION</h3>
                                        <%- data[i].how_apply %>
                                            <% } %>
                            </div>
                        </div>
                        <!--End job-post-body-->
                        <div class="form-group flr mb0">
                            <a class="remote-job" href="mailto:help@onlyremotejobs.com?subject=This%20is%20not%20a%20remote%20position&body=[sub]" onclick="this.href = this.href.replace('[sub]',window.location)"><i class="fa fa-edit"></i>Not a remote job</a>
                        </div>
                        <div id="modal">
                            <div class="modal-wrapper">
                                <div class="modal-body">
                                    <span class="close">X</span>
                                    <!-- action="/api/send_resume" -->
                                    <form method="post">
                                        <input type="hidden" id="job_title" value="<%= data[i].job_title %>" name="job_title" />
                                        <input type="hidden" value="<%= data[i].email_to %>" name="email_to" id="email_to" />
                                        <div class="form-group">
                                            <label>Full Name</label>
                                            <input type="text" class="input-control" name="full_name" id="full_name" />
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="email" class="input-control" name="email" id="email" />
                                        </div>
                                        <div class="form-group">
                                            <label>Cover Letter</label>
                                            <textarea class="input-control" rows="5" name="cover_letter" id="cover_letter"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label>Upload Resume</label>
                                            <input name="resume" id="resume" type="file" accept="application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document"
                                                class="input-control" />
                                        </div>
                                        <div class="form-group">
                                            <input type="button" class="custom-btn" id="sendEmailDirectly" value="Submit" disabled />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--End job-post-contact-->
                </div>
                <!--End job-post-wrap-->
            </div>
            <!--End container-->
    </div>
    <!--End Page-content-->
    <% } %>
        </div>
        <script>
            function checkTime(i) {
                if (i < 10) {
                    i = "0" + i;
                }
                return i;
            }

            function startTime() {
                var today = new Date();
                today = new Date(today.getUTCFullYear(), today.getUTCMonth(), today.getUTCDate(), today.getUTCHours(), today.getUTCMinutes(), today.getUTCSeconds());
                var h = today.getHours();
                var m = today.getMinutes();
                var s = today.getSeconds();
                m = checkTime(m);
                s = checkTime(s);
                h = checkTime(h);
                document.getElementById('time').innerHTML = h + ":" + m + ":" + s + " UTC";
            }
            setInterval(function () { startTime() }, 1000);

        </script>

